<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>strategy</artifactId>
        <groupId>com.tnd.pw</groupId>
        <version>1.0.0</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>
    <groupId>com.tnd.pw.strategy</groupId>
    <artifactId>runner</artifactId>
    <version>1.0.0</version>

    <dependencies>
        <dependency>
            <groupId>org.eclipse.jetty</groupId>
            <artifactId>jetty-servlets</artifactId>
            <version>9.4.27.v20200227</version>
        </dependency>
        <dependency>
            <groupId>com.tnd.pw.strategy</groupId>
            <artifactId>vision</artifactId>
        </dependency>
        <dependency>
            <groupId>com.tnd.common</groupId>
            <artifactId>ioc</artifactId>
        </dependency>
        <dependency>
            <groupId>com.tnd.pw.strategy</groupId>
            <artifactId>dbservice</artifactId>
        </dependency>
        <dependency>
            <groupId>com.tnd.common.api</groupId>
            <artifactId>server</artifactId>
        </dependency>
        <dependency>
            <groupId>com.tnd.common.api</groupId>
            <artifactId>common</artifactId>
        </dependency>
        <dependency>
            <groupId>com.tnd.pw.strategy</groupId>
            <artifactId>common</artifactId>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <artifactId>maven-assembly-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <archive>
                        <manifest>
                            <addClasspath>true</addClasspath>
                            <mainClass>com.tnd.pw.strategy.runner.StrategyRunner</mainClass>
                        </manifest>
                    </archive>
                    <descriptorRefs>
                        <descriptorRef>jar-with-dependencies</descriptorRef>
                    </descriptorRefs>
                    <finalName>strategy-runner</finalName>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>8</source>
                    <target>8</target>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>